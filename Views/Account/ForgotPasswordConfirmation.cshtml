@{
    ViewData["Title"] = "Password Reset Email Sent";
}

<div class="auth-container">
    <div class="auth-card text-center">
        <div class="auth-logo" style="background: var(--secondary-color);">
            <i class="fas fa-check-circle"></i>
        </div>

        <div class="auth-header">
            <h1 class="auth-title">Check Your Email</h1>
            <p class="auth-subtitle">We've sent you a password reset link</p>
        </div>

        <div class="p-4 rounded mb-4" style="background: #d1fae5;">
            <i class="fas fa-envelope fa-3x mb-3" style="color: var(--secondary-color);"></i>
            <p class="mb-0 text-muted">
                If an account exists with that email, you will receive a password reset link shortly.
            </p>
        </div>

        @if (TempData["ResetToken"] != null && TempData["ResetEmail"] != null)
        {
            <div class="alert alert-warning" role="alert">
                <strong><i class="fas fa-exclamation-triangle me-2"></i>Development Mode</strong>
                <hr />
                <p class="mb-2 small">In production, this would be sent via email. For development:</p>
                <a asp-action="ResetPassword"
                   asp-route-token="@TempData["ResetToken"]"
                   asp-route-email="@TempData["ResetEmail"]"
                   class="btn btn-sm btn-warning">
                    <i class="fas fa-link me-2"></i>Click here to reset password
                </a>
            </div>
        }

        <div class="d-grid mt-4">
            <a asp-action="Login" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-2"></i>
                Back to Login
            </a>
        </div>
    </div>
</div>