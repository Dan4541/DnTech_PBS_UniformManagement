@using DnTech_PBS_UniformManagement.ViewModels
@model IEnumerable<UserManagementViewModel>
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="text-gradient mb-1">
                <i class="fas fa-users-cog me-2"></i>User Management
            </h2>
            <p class="text-muted mb-0">Manage system users, roles and permissions</p>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-custom">
        <div class="card-body">
            <div class="table-responsive">
                <table id="userTable" class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th><i class="fas fa-user me-2"></i>Full Name</th>
                            <th><i class="fas fa-envelope me-2"></i>Email</th>
                            <th><i class="fas fa-id-card me-2"></i>ID Card</th>
                            <th><i class="fas fa-user-tag me-2"></i>Roles</th>
                            <th><i class="fas fa-toggle-on me-2"></i>Status</th>
                            <th><i class="fas fa-calendar me-2"></i>Created</th>
                            <th class="text-center"><i class="fas fa-cog me-2"></i>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td class="fw-bold">@user.Fullname</td>
                                <td>@user.Email</td>
                                <td>@(user.IdCard ?? "N/A")</td>
                                <td>
                                    @if (user.Roles.Any())
                                    {
                                        foreach (var role in user.Roles)
                                        {
                                            <span class="badge" style="background: var(--gradient-1); margin-right: 4px;">
                                                @role
                                            </span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">No roles</span>
                                    }
                                </td>
                                <td>
                                    @if (user.Active)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check me-1"></i>Active
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">
                                            <i class="fas fa-times me-1"></i>Inactive
                                        </span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="EditUser" asp-route-id="@user.Id"
                                           class="btn btn-outline-primary"
                                           title="Edit User">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-outline-danger"
                                                onclick="confirmDelete('@user.Id', '@user.Fullname')"
                                                title="Delete User">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                    <p class="text-muted">No users found in the system</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Modal de confirmación de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-danger me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete user <strong id="deleteUserName"></strong>?</p>
                <p class="text-danger mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    This action cannot be undone.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Cancel
                </button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Inicializa DataTables en tu tabla
            $('#userTable').DataTable({
                // Configuración opcional
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/2.0.7/i18n/es-MX.json" // Añade soporte en español
                },
                "pageLength": 5, // Muestra 10 registros por página
                "lengthMenu": [5, 10, 25, 50] // Opciones para el usuario
            });
        });

        // Tu función existente de confirmDelete
        function confirmDelete(userId, userName) {
            document.getElementById('deleteUserName').textContent = userName;
            document.getElementById('deleteForm').action = '/Account/DeleteUser/' + userId;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}