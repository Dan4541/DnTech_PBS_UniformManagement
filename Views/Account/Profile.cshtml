@using DnTech_PBS_UniformManagement.ViewModels
@model EditProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-custom">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="auth-logo d-inline-flex mb-3">
                            <i class="fas fa-user"></i>
                        </div>
                        <h2 class="text-gradient">My Profile</h2>
                        <p class="text-muted">Update your personal information</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="Profile" method="post">
                        <div class="mb-3">
                            <label asp-for="Fullname" class="form-label">
                                <i class="fas fa-user me-2"></i>Full Name
                            </label>
                            <input asp-for="Fullname" class="form-control" placeholder="Enter your full name" readonly />
                            <span asp-validation-for="Fullname" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="IdCard" class="form-label">
                                <i class="fas fa-id-card me-2"></i>ID Card
                            </label>
                            <input asp-for="IdCard" class="form-control" placeholder="Enter your ID card" readonly />
                            <span asp-validation-for="IdCard" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control"/>
                            <small class="text-muted">Incorrect Format of Email</small>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-custom btn-gradient">
                                <i class="fas fa-save me-2"></i>
                                Update Profile
                            </button>
                            <a asp-action="ChangePassword" class="btn btn-outline-secondary">
                                <i class="fas fa-key me-2"></i>
                                Change Password
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}