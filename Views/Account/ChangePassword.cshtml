@using DnTech_PBS_UniformManagement.ViewModels
@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-5">
            <div class="card shadow-custom">
                <div class="card-body p-4">
                    <div class="text-center mb-4">
                        <div class="auth-logo d-inline-flex mb-3" style="background: var(--gradient-2);">
                            <i class="fas fa-key"></i>
                        </div>
                        <h2 class="text-gradient">Change Password</h2>
                        <p class="text-muted">Update your account password</p>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger" role="alert">
                            <ul class="mb-0">
                                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                {
                                    <li>@error.ErrorMessage</li>
                                }
                            </ul>
                        </div>
                    }

                    <form asp-action="ChangePassword" method="post" id="changePasswordForm">
                        <div class="mb-3">
                            <label asp-for="CurrentPassword" class="form-label">
                                <i class="fas fa-lock me-2"></i>Current Password
                            </label>
                            <div class="position-relative">
                                <input asp-for="CurrentPassword"
                                       class="form-control pe-5"
                                       placeholder="Enter current password"
                                       type="password"
                                       id="currentPassword" />
                                <button type="button"
                                        class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-decoration-none p-0 pe-3"
                                        onclick="togglePassword('currentPassword', 'toggleIcon1')"
                                        tabindex="-1"
                                        style="z-index: 10; border: none; background: none;">
                                    <i class="fas fa-eye" id="toggleIcon1" style="color: #94a3b8;"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="NewPassword" class="form-label">
                                <i class="fas fa-key me-2"></i>New Password
                            </label>
                            <div class="position-relative">
                                <input asp-for="NewPassword"
                                       class="form-control pe-5"
                                       placeholder="Enter new password"
                                       type="password"
                                       id="newPassword" />
                                <button type="button"
                                        class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-decoration-none p-0 pe-3"
                                        onclick="togglePassword('newPassword', 'toggleIcon2')"
                                        tabindex="-1"
                                        style="z-index: 10; border: none; background: none;">
                                    <i class="fas fa-eye" id="toggleIcon2" style="color: #94a3b8;"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label">
                                <i class="fas fa-check-circle me-2"></i>Confirm New Password
                            </label>
                            <div class="position-relative">
                                <input asp-for="ConfirmPassword"
                                       class="form-control pe-5"
                                       placeholder="Confirm new password"
                                       type="password"
                                       id="confirmPassword" />
                                <button type="button"
                                        class="btn btn-link position-absolute end-0 top-50 translate-middle-y text-decoration-none p-0 pe-3"
                                        onclick="togglePassword('confirmPassword', 'toggleIcon3')"
                                        tabindex="-1"
                                        style="z-index: 10; border: none; background: none;">
                                    <i class="fas fa-eye" id="toggleIcon3" style="color: #94a3b8;"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-custom btn-gradient">
                                <i class="fas fa-save me-2"></i>
                                Change Password
                            </button>
                            <a asp-action="Profile" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>
                                Back to Profile
                            </a>
                        </div>
                    </form>

                    <!-- Password Requirements -->
                    <div class="mt-4 p-3 rounded" style="background: #f1f5f9;">
                        <h6 class="fw-bold mb-2" style="color: var(--primary-color); font-size: 0.9rem;">
                            <i class="fas fa-info-circle me-2"></i>Password Requirements:
                        </h6>
                        <ul class="small text-muted mb-0" style="list-style: none; padding-left: 0;">
                            <li><i class="fas fa-check text-success me-2"></i>At least 6 characters</li>
                            <li><i class="fas fa-check text-success me-2"></i>Uppercase letter (A-Z)</li>
                            <li><i class="fas fa-check text-success me-2"></i>Lowercase letter (a-z)</li>
                            <li><i class="fas fa-check text-success me-2"></i>Number (0-9)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function togglePassword(fieldId, iconId) {
            const passwordField = document.getElementById(fieldId);
            const toggleIcon = document.getElementById(iconId);

            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordField.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        document.getElementById('changePasswordForm').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Changing password...';
            submitBtn.disabled = true;
        });
    </script>
}